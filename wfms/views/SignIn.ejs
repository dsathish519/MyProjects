<html>
<head>
<title>SignIn Form</title>
<link rel="stylesheet" type="text/css" href="../stylesheets/style.css">
</head>
<body>
<div class="login-box">
<form action="/SignIn" method="POST">
<h1>SignIn Here</h1><br>
<p>username</p>
<input type="text" name="username" required="true">
<p>password</p>
<input type="password" name="password" id="password" required="true"><br>
<p>Confirm password</p>
<input type="password" name="cpassword" id="cpassword" required="true"><br>
<input type="checkbox" name="option" value="employee" style="width: auto;"> Check if your an employee<br>
<input type="submit" value="SignIn" onclick="return Validate()">
<center>
<br>
<a href="/Login"><u style="color:white;">Already Member ?</u></a>
</center>
</form>
</div>
 <script type="text/javascript">
    function Validate() {
        var password = document.getElementById("password").value;
        var cpassword = document.getElementById("cpassword").value;
        if (password != cpassword) {
            alert("confirm Passwords do not match with password.");
            return false;
        }
        return true;
    }
</script>
</body>
</html>
